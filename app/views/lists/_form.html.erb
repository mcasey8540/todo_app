<% if notice %>
	<div class="alert alert-success"><%= notice %></div>
<% end %>
<% if alert %>
	<div class="alert alert-error"><%= notice %></div>
<% end %>

<%= form_for @list do |f| %>

	<label> Name:
		<p><%= f.text_field :name %></p>
	</label>

	<label>Description:
		<p>
			<%= f.text_field :description %>
		</p>
	</label>

	<p>
		<%= f.submit class: "btn btn-info" %>
	</p>

<% end %>