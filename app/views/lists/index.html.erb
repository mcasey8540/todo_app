<% if alert %>
	<div class="alert alert-error"><%= alert %></div>
<% end %>
<% if notice %>
	<div class="alert alert-success"><%= notice %></div>
<% end %>

	<table class= "table table-striped table-bordered"
		<tr>
			<th><%= sortable "name" %></th>
			<th><%= sortable "created_at", "Created At" %></th>
			<th>Options</th>
		</tr>

		<% @lists.each do |list| %>
			<% unless list.nil? %>
		<tr>
			<td width="200"><%= link_to "#{list.name}", list_path(list) %></td>
			<td width="50"><%= list.created_at.to_date %></td>
			<td width="100"><%= link_to "Edit", edit_list_path(list), class: "btn btn-success" %> 
				<%= link_to "Delete", list_path(list), :confirm => "Sure you want to delete list?", :method => :delete, class: "btn btn-danger"%>
			</td>
		</tr>
		<% end %>	
		<% end %>
</table> 

<%= link_to "Add New List", new_list_path , class: "btn btn-info" %>
