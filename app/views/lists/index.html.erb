<h1>My Todo Lists</h1>

<% @lists.each do |list| %>
	<% unless list.nil? %>
		<li><h3><%= link_to "#{list.name}", list_path(list) %></h3></li>
		<p><%= list.description %> 
		<%= link_to "Edit", edit_list_path(list)%> |  
		<%= link_to "Delete", list_path(list), :confirm => "Sure you want to delete list?", :method => :delete%> </p>
	<% end %> 	
<% end %>

<%= link_to "Add New List", new_list_path %>
