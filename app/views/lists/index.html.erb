<% if notice %>
	<div class="alert alert-success"><%= notice %></div>
<% end %>

<table class= "table table-striped table-bordered"
	<tr>
		<th><div class="btn-group">
	  <button class="btn">My Lists</button>
	  <button class="btn dropdown-toggle" data-toggle="dropdown">
	  <span class="caret"></span>
  	</button>
		</button>
  	<ul class="dropdown-menu">
    <%= link_to "Most Recently Created", root_path(:sort_by => "created_at") %>
    <%= link_to "Name", root_path(:sort_by => "name") %>
  	</ul>
		</div>
  	</th>
		<th>Options</th>
	</tr>
	<% @lists.each do |list| %>
	<% unless list.nil? %>
	<tr>
		<td width="200"><%= link_to "#{list.name}", list_path(list) %></td>
		<td width="100"><%= link_to "Edit", edit_list_path(list), class: "btn btn-success" %> <%= link_to "Delete", list_path(list), :confirm => "Sure you want to delete list?", :method => :delete, class: "btn btn-danger"%></td>
	</tr>
	<% end %>	
<% end %>
</table> 

<%= link_to "Add New List", new_list_path, class: "btn btn-info" %>
